{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "exclude": ["node_modules", "dist", "prisma"]
}
